{
  "name": "cg-site",
  "version": "1.3.0",
  "scripts": {
    "start": "run-p watch:*",
    "watch:jekyll": "bundle exec jekyll build --watch",
    "watch:static:js": "copy-and-watch --watch _assets/js/* _site/assets/js",
    "watch:static:docs": "parcel watch --no-hmr _assets/documents/* --dist-dir _site/assets/documents",
    "watch:css": "parcel watch --no-hmr _assets/css/styles.scss --dist-dir _site/assets/css",
    "watch:images": "parcel watch --no-hmr _assets/images/**/* --dist-dir _site/assets/images/",
    "watch:server": "http-server _site -o",
    "build-local": "run-s prod:parcel jekyll",
    "jekyll": "bundle exec jekyll build JEKYLL_ENV=production",
    "prod:parcel": "run-p build:css build:static:js build:static:docs build:images",
    "build:static:js": "copy-and-watch _assets/js/* assets/js",
    "build:static:docs": "parcel build _assets/documents/* --dist-dir assets/documents",
    "build:css": "parcel build _assets/css/styles.scss --dist-dir assets/css",
    "build:images": "parcel build _assets/images/**/* --dist-dir assets/images/",
    "link-checker": "sh scripts/run-lychee-local.sh",
    "pages": "npm run prod:parcel"
  },
  "dependencies": {
    "anchor-js": "^4.3.0",
    "http-server": "^14.1.1",
    "netlify-cms": "^2.10.112",
    "uswds": "^2.13.3"
  },
  "devDependencies": {
    "@parcel/transformer-sass": "^2.8.3",
    "copy-and-watch": "^0.1.6",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.8.3"
  },
  "browserList": [
    "last 2 versions",
    "> 2%",
    "IE 11",
    "not dead"
  ]
}
